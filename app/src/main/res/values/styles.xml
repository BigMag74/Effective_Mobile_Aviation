<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_1">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="title_2">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="title_3">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="title_4">
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="text_1">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="text_2">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="button_text1">
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="tab_text">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>


    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/red</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="switchStyle">
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/gray_5</item>
    </style>

